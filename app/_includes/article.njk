---
layout: 'base.njk'
---

       
<article class="main-article lightbox-img">
<div class="container container--narrow flow">
  
    <h1 class="article-title">
      {{ title }}
    </h1>
  <p><span class="snippet__meta">{{ post.data.author }}</span> <span class="snippet__meta"> {{ page.date | readableDate }}</span></p>
    <figure class="main-article__figure">
      <img src="../{{image}}" alt="{{imageAlt}}">
      <figcaption>
        {{imageAlt}}
      </figcaption>
    </figure>
{{ content | safe }}    
  
</div>
</article>

